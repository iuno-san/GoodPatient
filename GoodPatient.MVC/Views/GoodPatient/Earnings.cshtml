@model IEnumerable<GoodPatient.Application.GoodPatientEarnings.GoodPatientEarningsDto>

@{
    ViewData["Title"] = "Panel rozpisu dochodow";
}

<div class="mt-40">
    <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 text-sm font-medium md:space-x-2">
            <li class="inline-flex items-center">
                <a class="inline-flex items-center text-gray-700">
                    <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
                    GoodPatient
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                    <a class="ml-1 text-gray-700 md:ml-2">Zarządzanie zarobkami</a>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                    <span class="ml-1 text-gray-400 md:ml-2" aria-current="page">Lista dochodów</span>
                </div>
            </li>
        </ol>
    </nav>
</div>
<div class="mb-2">
    <h1 class="text-4xl font-semibold text-gray-900">Moje Dochody</h1>
    <p class="text-sm font-normal text-gray-500 max-w-md mt-3">Zarządzaj swoimi zyskami dodawaj ostatnie Dochody, jakie udało ci się uzyskać.</p>
</div>
<div class="sm:flex">
    <div class="form-group pull-right search-bar">
        <button onclick="focusSearchInput()"></button>
        <div class="relative mt-1 lg:w-64 xl:w-96">
            <input id="searchInput" type="text" class="search form-control bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Wyszukaj swoich pacjentów..">
        </div>
    </div>
    <div class="flex pl-0 mt-3 space-x-1 sm:pl-2 sm:mt-0">
        <a class="mt-3 inline-flex justify-center p-1 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100  ">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path></svg>
        </a>
        <a class="mt-3 inline-flex justify-center p-1 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100  ">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
        </a>
        <a class="mt-3 inline-flex justify-center p-1 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100  ">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
        </a>
        <button id="dropdownMenuIconButton" data-dropdown-toggle="dropdownDots" class="mt-3 inline-flex justify-center p-1 text-gray-500 rounded cursor-pointer hover:text-gray-900 hover:bg-gray-100  " type="button">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path></svg>
        </button>
        <!-- Dropdown menu -->
        <div id="dropdownDots" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
            <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdownMenuIconButton">
                <li>
                    <a href="@Url.Action("Dashboard", "GoodPatient")" class="block px-4 py-2 hover:bg-gray-100">Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "GoodPatient")" class="block px-4 py-2 hover:bg-gray-100">Lista pacjentów</a>
                </li>
                <li>
                    <a href="@Url.Action("Calendar", "GoodPatient")" class="block px-4 py-2 hover:bg-gray-100">Kalendarz wizyt</a>
                </li>
                <li>
                    <a href="@Url.Action("Earnings", "GoodPatient")" class="block px-4 py-2 hover:bg-gray-100">Dochody</a>
                </li>
            </ul>
            <div class="py-2">
                <a class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Raporty</a>
            </div>
        </div>
    </div>
    <div class="flex items-center ml-auto space-x-2 sm:space-x-3">
        <a asp-action="Create" class="hover:text-gray-300 inline-flex items-center justify-center w-1/2 px-3 py-2 text-sm font-medium text-center text-gray-50 bg-black border border-gray-300 rounded-lg hover:bg-gray-100 sm:w-auto">
            <svg class='w-6 h-6 text-gray-50 mr-2' aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24'>
                <path stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M5 12h14m-7 7V5' />
            </svg>
            Dodaj nowy zarobek
        </a>
    </div>
</div>
<span class="counter pull-right"></span>
<div class="rounded-lg border border-gray-200 mt-4 px-0">
    <div class="overflow-x-auto rounded-t-lg">
        <table class="table table-hover results text-center text-lg">
            <thead class="bg-gray-100">
                <tr>
                    <th scope="col" class="p-4">
                        <div class="flex items-center">
                            <input id="checkbox-all" aria-describedby="checkbox-1" type="checkbox" class="w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300">
                            <label for="checkbox-all" class="sr-only">checkbox</label>
                        </div>
                    </th>
                    <th scope="col" class="p-4 text-center text-sm font-medium text-left text-gray-600 uppercase bg">
                        Nazwa usułgi
                    </th>
                    <th scope="col" class="p-4 text-center text-sm font-medium text-left text-gray-600 uppercase ">
                        Imię pacjenta
                    </th>
                    <th scope="col" class="p-4 text-center text-sm font-medium text-left text-gray-600 uppercase ">
                        Dochód
                    </th>
                    <th scope="col" class="p-4 text-center text-sm font-medium text-left text-gray-600 uppercase ">
                        Metoda płatności
                    </th>
                    <th scope="col" class="p-4 text-center text-sm font-medium text-left text-gray-600 uppercase ">
                        Dzień wizyty
                    </th>
                    <th scope="col" class="p-4 text-center text-sm font-medium text-left text-gray-600 uppercase ">
                        Akcje
                    </th>

                </tr>
                <tr class="warning no-result">
                    <td colspan="5"><i class="fa fa-warning"></i>Brak wyników</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var (index, item) in Model.Select((value, i) => (i + 1, value)))
                {
                    <tr>
                        <td class="w-4 p-4">
                            <div class="flex items-center">
                                <input id="checkbox-{{ .id }}" aria-describedby="checkbox-1" type="checkbox" class="w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300">
                                <label for="checkbox-{{ .id }}" class="sr-only">checkbox</label>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex justify-center align-items-center">
                                <div class="avatar-img avatar-sm me-3">
                                    <img id="profile-picture-edit" class="rounded-circle max-w-12" src="/img/icons/medicalTreatment.png" alt="medicalTreatment" />
                                </div>

                                <div class="d-flex flex-column">
                                    <a class="text-body text-truncate" asp-controller="GoodPatient" asp-action="DetailsEarnings" asp-route-encodedName="@item.EncodedName">
                                        <span class="fw-medium">@item.Name</span>
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="mt-2">
                                <span>
                                    @item.PatientName
                                </span>
                            </div>
                        </td>
                        <td>
                            <div class="mt-2">
                                <span>
                                    @item.Amount
                                </span>
                            </div>
                        </td>
                        <td>
                            <div class="mt-2">
                                <span>
                                    @item.PaymentMethod
                                </span>
                            </div>
                        </td>
                        <td>
                            <div class="mt-2">
                                <span>
                                    @item.DateOfVisit
                                </span>
                            </div>
                        </td>

                        <td>
                            <div class="mt-2 justify-center">
                                @if (item.IsEditable)
                                {
                                    <a class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300" asp-controller="GoodPatient" asp-action="EditEarnings" asp-route-encodedName="@item.EncodedName">
                                        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
                                        Edytuj
                                    </a>
                                }
                                <a class="inline-flex items-center ml-2 px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-blue-300" asp-controller="GoodPatient" asp-action="DeleteEarnings" asp-route-encodedName="@item.EncodedName">
                                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
                                    Usuń
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

